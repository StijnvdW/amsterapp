<div class="panel panel-default">
  <div class="panel-heading">Lijst van artikels</div>
  <!--<div class="panel-body">
    <p>...</p>
  </div>-->

  <table class="table">
    <thead>
    <tr>
      <th>Titel</th>
      <th>Link</th>
      <th>Acties</th>
    </tr>
    </thead>

    <tbody>
    <% @articles.take(10).each do |article| %> <!--'firefox'-bug: scrollbar zorgt dat container beweegt naar links!-->
        <tr>
          <td><%= article.title %></td>
          <td><%= article.link %></td>
          <td>
            <%= link_to article do %>
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <% end %>
            <%= link_to edit_article_path(article) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
            <%= link_to article, method: :delete, data: { confirm: 'Bent u zeker?' } do %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Nieuw artikel', new_article_path, class: "btn btn-default" %>
